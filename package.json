{
    "name": "oauth2-auth-api",
    "version": "1.0.0",
    "main": "server.js",
    "author": "kchn9",
    "license": "MIT",
    "private": true,
    "prisma": {
        "schema": "src/prisma/schema.prisma"
    },
    "scripts": {
        "start": "export NODE_ENV=\"production\" && node dist/src/server.js",
        "db:create": "docker compose up --build -d && sleep 5 && yarn prisma db push",
        "db:start": "docker compose unpause",
        "db:stop": "docker compose pause",
        "db:drop": "docker compose down -v",
        "dev": "export NODE_ENV=\"development\" && tsc-watch --onSuccess \"node ./dist/src/server.js\"",
        "build": "rm -rf dist && tsc"
    },
    "dependencies": {
        "@prisma/client": "4.7.1",
        "argon2": "0.30.2",
        "config": "3.3.8",
        "dayjs": "1.11.7",
        "dotenv": "16.0.3",
        "express": "4.18.2",
        "jsonwebtoken": "8.5.1",
        "pino": "8.7.0",
        "pino-http": "8.2.1",
        "pino-pretty": "9.1.1",
        "ts-node": "10.9.1",
        "zod": "3.20.2"
    },
    "devDependencies": {
        "@types/config": "3.3.0",
        "@types/express": "4.17.15",
        "@types/jsonwebtoken": "8.5.9",
        "@types/node": "18.11.15",
        "@typescript-eslint/eslint-plugin": "5.46.1",
        "@typescript-eslint/parser": "5.46.1",
        "eslint": "8.29.0",
        "prettier": "2.8.1",
        "prisma": "4.7.1",
        "tsc-watch": "6.0.0",
        "typescript": "4.9.4"
    }
}
